{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "importOrder": [
    "^@/(.*)$",
    "^[./]",
    "^@radix-ui/(.*)$",
    "^@next/(.*)$",
    "^next/(.*)$",
    "^react$",
    "^react-dom$",
    "^@prisma/(.*)$",
    "^prisma$",
    "^zod$",
    "^next-auth$",
    "^bcryptjs$",
    "^lucide-react$",
    "^class-variance-authority$",
    "^clsx$",
    "^tailwind-merge$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
